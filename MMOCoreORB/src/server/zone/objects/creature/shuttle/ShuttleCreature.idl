package server.zone.objects.creature.shuttle;

import engine.core.ManagedObject;
import engine.lua.LuaObject;
import system.util.Vector;
import system.lang.Time;
import server.zone.Zone;
import system.util.SortedVector;
import server.zone.objects.creature.NonPlayerCreatureObject;
import server.zone.objects.player.PlayerCreature;
import server.zone.objects.tangible.ticket.TicketObject;
import system.lang.ref.Reference;
import server.zone.managers.planet.PlanetManager;
import server.zone.Zone;
import server.zone.ZoneServer;
import server.zone.objects.creature.shuttle.ShuttleLandingEvent;
import server.zone.objects.creature.shuttle.ShuttleTakeOffEvent;

class ShuttleCreature extends NonPlayerCreatureObject {
	protected string planet;
	protected string city;
	protected unsigned int tax;
	protected boolean starport;

	protected float arrivalPositionX;
	protected float arrivalPositionZ;
	protected float arrivalPositionY;

	@dereferenced
	protected transient Reference<ShuttleLandingEvent> shuttleLandingEvent;
	@dereferenced
	protected transient Reference<ShuttleTakeOffEvent> shuttleTakeOffEvent;

	public ShuttleCreature() {
		Logger.setLoggingName("ShuttleCreature");
		Logger.setLogging(false);
		Logger.setGlobalLogging(true);
	}
	
	public native void doTakeOff();
	
	public native void doLanding();

	
	/**
	 * @pre { player is locked }
	 * @post { player is locked }
	 */
	public native void sendPlayerTo(PlayerCreature player, TicketObject ticket);
	
	public int getArrivalTime() {
		PlanetManager planetManager = super.zone.getPlanetManager();
		long land = getLandingTime();
		
		int t = (land / 1000) * -1;

		return t;
	}
	
	public native long getLandingTime();
	
	@local
	public void getArrivalPoint(@dereferenced float x, @dereferenced float y, @dereferenced float z) {
		x = arrivalPositionX;
		y = arrivalPositionY;
		z = arrivalPositionZ;
	}
	
	public void setArrivalPoint(float x, float y, float z) {
		arrivalPositionX = x;
		arrivalPositionY = y;
		arrivalPositionZ = z;
	}
	
	public void setStarport(boolean st) {
		starport = st;
	}
	
	public void setPlanet(final string plan) {
		planet = plan;
	}
	
	public void setCity(final string cit) {
		city = cit;
	}
	
	public void setTax(unsigned int t) {
		tax = t;
	}
	
	public string getPlanet() {
		return planet;
	}
	
	public string getCity() {
		return city;
	}
	
	public unsigned int getTax() {
		return tax;
	}
	
	public boolean isStarport() {
		return starport;
	}
	
	public boolean isShuttleCreature() {
		return true;
	}
}
