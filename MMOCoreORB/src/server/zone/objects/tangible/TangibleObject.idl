	public static final unsigned short ITHORIANS = 0xF803;//ITHORIAN | ALLSEXES | ALLFACTIONS;
	public static final unsigned short TWILEKS = 0xF013;//TWILEK | ALLSEXES | ALLFACTIONS;
	
