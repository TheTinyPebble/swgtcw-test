	public static final unsigned short HUMANOID_HANDWEAR = 0xF5F7;//HUMANOIDS & ~TRANDOSHAN;
	public static final unsigned short HUMANOID_HEADWEAR = 0xF5EF;//HUMANOIDS & ~TWILEK;
